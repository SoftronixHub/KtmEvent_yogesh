<h2>Please contact us if you have any enquiry! </h2>

<div class="contactform panel panel-default col-md-6">
<%= form_tag do %>
<table>
<tr>
<td>
<%= label_tag(:name,"Full Name:") %>
</td>
<td>
<%= text_field_tag(:name) %>
</td>
</tr>
<tr>
<td> <%=label_tag("Gender") %>
<td>
<%= radio_button_tag(:gender,"Male") %>
<%= label_tag(:gender,"Male") %>
<%= radio_button_tag(:gender,"Female") %>
<%= label_tag(:gender,"Female") %>
</td>
</tr>
<tr>
<td>
<%= label_tag(:email,"Email Id:") %>
</td>
<td>
<%= text_field_tag(:email) %>
</td>
</tr>
<tr>
<td>
<%= label_tag(:phone,"Phone Number:") %>
</td>
<td>
<%= text_field_tag(:phone) %>
</td>
</tr>
<tr>
<td>
<%= label_tag(:message,"Message:") %>
</td>
<td>
<%= text_area_tag(:message,"type your message here",size:24*6) %>
</td>
</tr>
<tr>
<td cols=2>
<%= check_box_tag(:subscribe) %>
<%= label_tag(:subscribe,"Subscribe to our mailing list.") %>
</td>
</tr>

<tr>
<td cols=2>
<%= submit_tag("Submit") %>
</td>
</tr>
</table>
<% end %>

</div>